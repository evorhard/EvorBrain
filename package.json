{
  "name": "evorbrain",
  "version": "0.1.0",
  "description": "A life management system that integrates seamlessly with how you think and work",
  "type": "module",
  "scripts": {
    "start": "tauri dev",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "bunx vitest",
    "test:ui": "bunx vitest --ui",
    "test:run": "bunx vitest run",
    "test:coverage": "bunx vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md}\" \"*.{js,json,md}\"",
    "clean": "./scripts/clean.sh",
    "clean:all": "./scripts/clean.sh --all"
  },
  "license": "MIT",
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.9.3"
  },
  "devDependencies": {
    "@kobalte/tailwindcss": "^0.9.0",
    "@playwright/test": "^1.54.1",
    "@solidjs/router": "^0.15.3",
    "@solidjs/testing-library": "^0.8.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-solid": "^0.14.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^3.2.4"
  }
}
